!!!
%html
  %head
    %title Mysquash
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    = favicon_link_tag "/assets/favicon.ico"
  %body
    #menu.bold
      #menu_items.size_100.center
        .menu_item
          =image_tag "header_cup.png"
          %span Les tournois
        .menu_item
          =image_tag "header_cart.png"
          %span La boutique
        .menu_item
          =image_tag "header_racket.png"
          %span les le√ßons
        .clearfix

    #tournament.size_100.center
      #tournament_introduction.size_75.center
        %h1 Inscriptions aux tournois
        %h2.size_50.center= @tournament.title

      #tournament_information
        #number_inscriptions.left.size_25
          %p= "Nombre de joueurs inscrits #{@tournament.users.count}"
        #description.left.size_75
          %p= @tournament.description
        .clearfix

      #tournament_inscription.size_50.center
        %h2 INSCRIPTION
        %p.bold Merci de bien vouloir renseigner le champ suivant :
        = form_tag inscriptions_path, method: :post, id: :tournament_form do 
          = hidden_field_tag :tournament_id, @tournament.id
          = email_field_tag :email
          = submit_tag "Valider"

      #registration_form
        = render template: "users/registrations/new", layout: false
      
      #content
        - if flash[:notice] || flash[:alert]
          .notice.alert= flash[:notice] || flash[:alert]
        =yield
    
    #bottom_layer  
      - if @next_tournament
        #next_tournament.size_50.center
          %h4.red.bold PROCHAIN TOURNOI
          %p= @next_tournament.title
          = form_tag inscriptions_path, method: :post do 
            = hidden_field_tag :preinscription, "1"
            = text_field_tag :pre_inscription_email
            = submit_tag "Valider"

    #bottom_menu
    #footer
