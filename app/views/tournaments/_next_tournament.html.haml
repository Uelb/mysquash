- if @next_tournament
  #next_tournament.center
    %h4.red.bold.tournoi_title PROCHAIN TOURNOI
    %p.desc= @next_tournament.title
    = form_tag inscriptions_path, method: :post do 
      = hidden_field_tag :preinscription, "1"
      = hidden_field_tag :tournament_id, @next_tournament.id, id: :next_tournament_id
      .info Je souhaitre être informé de l’ouverture des prochaines insciptions
      = text_field_tag :email_confirmation,'', placeholder: 'Votre email...', class: 'special_input', id: :preinscription_email
      = submit_tag "Valider"