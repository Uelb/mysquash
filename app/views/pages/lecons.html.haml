- #coding: UTF-8
#lecons
  #lecon_introduction.size_100.center
    %h1 Les leçons

  #rubriques.size_100.center
  - @rubriques.each do |rubrique|
    %div{id: "rubrique_#{rubrique.id}"}
      =rubrique.title
      %br
      =rubrique.description
      -if rubrique.button_link
        = link_to rubrique.button_text||"Accéder", rubrique.button_link

  #slideshow
    = image_tag asset_path("/assets/lecons_photo.png")